@import url('https://fonts.googleapis.com/css2?family=Indie+Flower');

@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

* {
	@apply box-border;
}

html,
body {
	@apply h-full;
}

body {
	font-family: 'Indie Flower', sans-serif;
}

img,
picture,
video,
canvas,
svg {
	display: block;
	max-width: 100%;
}
